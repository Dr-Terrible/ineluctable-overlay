source /etc/conf.d/gwm

depend() {
	need net
}

start() {
	ebegin "Starting gwm-flashpolicy"

	export PYTHONPATH="$GWM_PATH"
	source $GWM_PATH/bin/activate

	twistd --pidfile=/var/run/flashpolicy.pid flashpolicy
	eend $?
}

stop() {
	ebegin "Stopping gwm-flashpolicy"
	start-stop-daemon --stop --quiet --pidfile /var/run/flashpolicy.pid 
	eend $?
}
