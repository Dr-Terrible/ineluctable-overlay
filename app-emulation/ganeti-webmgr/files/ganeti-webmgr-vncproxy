depend() {
	need net
}

start() {
	ebegin "Starting gwm-vncproxy"
	twistd --pidfile=/var/run/vncap.pid vncap -c tcp:8888
	eend $?
}

stop() {
	ebegin "Stopping gwm-vncproxy"
	start-stop-daemon --stop --quiet --pidfile /var/run/vncap.pid 
	eend $?
}
